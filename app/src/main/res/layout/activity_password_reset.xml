<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordReset">


    <ImageView
        android:id="@+id/background_img"
        android:layout_width="371dp"
        android:layout_height="519dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/white_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159"
        app:srcCompat="@drawable/mask_group" />

    <ImageView
        android:id="@+id/white_rectangle"
        android:layout_width="360dp"
        android:layout_height="470dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUnleash"
        app:layout_editor_absoluteX="10dp"
        app:srcCompat="@drawable/white_rectangle" />

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="242dp"
        android:layout_height="156dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_small" />


    <TextView
        android:id="@+id/textViewUnleash"
        android:layout_width="326dp"
        android:layout_height="107dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Unleash Your Inner Chef Explore, Create, and Savor"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/white_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_img" />

    <TextView
        android:id="@+id/textViewEvery"
        android:layout_width="245dp"
        android:layout_height="89dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Every Bite!"
        android:textColor="#FB8A22"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewSet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewUnleash" />

    <TextView
        android:id="@+id/textViewSet"
        android:layout_width="320dp"
        android:layout_height="79dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="355dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Password Reset"
        android:textColor="#2A3139"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/white_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/white_rectangle" />


    <TextView
        android:id="@+id/textViewNo"
        android:layout_width="355dp"
        android:layout_height="51dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="295dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="We sent a code to example@gmail.com"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/white_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSet" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="302dp"
        android:layout_height="82dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="21dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/buttonReset"
        app:layout_constraintEnd_toEndOf="@+id/white_rectangle"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/background_img">


        <EditText
            android:id="@+id/otp1"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:background="@drawable/otp_box"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="52dp"
            tools:layout_editor_absoluteY="582dp" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:background="@drawable/otp_box"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="582dp" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:background="@drawable/otp_box"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="213dp"
            tools:layout_editor_absoluteY="582dp" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:background="@drawable/otp_box"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="298dp"
            tools:layout_editor_absoluteY="582dp" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="322dp"
        android:layout_height="56dp"
        android:layout_marginTop="281dp"
        android:layout_marginBottom="133dp"
        android:backgroundTint="#FB8A22"
        android:elevation="4dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:translationZ="8dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/white_rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.631"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/white_rectangle" />

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="100dp"
        android:clickable="true"
        android:fontFamily="@font/poppins_regular"
        android:text="Didnâ€™t receive the code? Click here"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/white_rectangle"
        app:layout_constraintEnd_toEndOf="@+id/white_rectangle"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/buttonReset" />

    <ImageView
        android:id="@+id/imageViewArrow"
        android:layout_width="52dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewBack"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReset"
        app:layout_constraintVertical_bias="0.493"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textViewBack"
        android:layout_width="174dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Back to login in"
        android:textAppearance="@style/explore_coo"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonReset"
        app:layout_constraintHorizontal_bias="0.691"
        app:layout_constraintStart_toStartOf="@+id/buttonReset"
        app:layout_constraintTop_toBottomOf="@+id/buttonReset"
        app:layout_constraintVertical_bias="0.475" />


</androidx.constraintlayout.widget.ConstraintLayout>
